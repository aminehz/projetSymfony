{{form_widget(formation_form.begin_at,{'attr':{'placeholder':'Debut de la formation'}})}}
</div>
<div class="input-field ">
{{form_label(formation_form.image)}} : 
{{form_widget(formation_form.image,{'attr':{'placeholder':'image de la formation'}})}}
</div>


<div class="ml-5">
 {{form_widget(formation_form.Submit)}}
</div>
   
