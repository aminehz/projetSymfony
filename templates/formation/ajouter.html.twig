{% extends "base.html.twig" %}
{% block title %}
    Ajout Formation
{% endblock %}
{% block body %}
    <h2 class="d-flex justify-content-center mt-5"> Ajouter une formation </h2>
    <div class="d-flex justify-content-center mt-5 ">
    

<div class="card border-info mb-3 " style="max-width: 18rem;">
  <div class="card-header">Ajouter une formation </div>
  <div class="card-body text-info alert alert-info  ">
    {{form_start(formation_form)}}
<div class="input-field border-primary ">
{{form_label(formation_form.titre)}} : 
{{form_widget(formation_form.titre,{'attr':{'placeholder':'Titre de la formation'}})}}
