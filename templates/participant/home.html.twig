{% extends 'base.html.twig' %}
{% block body %}
	<h2 class="mt-5 d-flex justify-content-center mb-5"> Liste des participants 
    
    </h2>

	<table class="table table-hover table-striped" border="1">
		<thead class="bg-info">
			<tr>
				<th>#</th>
				<th>Nom
				</th>
				<th>Email</th>
				<th>fonction</th>
				<th>Titre du formation</th>
                <th>Action </th>
			</tr>
		</thead>
		<tbody>
			{% for participants in lesParticipants %}
				<tr>
					<td>{{participants.id}}</td>
					<td>{{participants.Nom |upper}}</td>
					<td>{{participants.Email}}</td>
					<td>{{participants.fonction}}</td>
                    <td>{{participants.formation.titre}}</td>
					<td>
						<a class="btn btn-info" href="{{path('editP',{'id':participants.id})}}">Modifier</a>
						<a class="btn btn-danger" href="{{path('participant_delete',{'id':participants.id})}}" onclick="return confirm('Are you sure to delete!{{ participants.nom}}')">Supprimer</a>
						
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucun abonn√©</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
