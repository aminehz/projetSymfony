<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>



{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3 d-flex justify-content-center ">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}


		<div class="d-flex justify-content-center mt-5 ">


			<div class="card border-info mb-3 " style="max-width: 18rem;">
				<div class="card-header">Login In
				</div>
				<div class="card-body text-info alert alert-info  ">

					<div class="input-field border-primary ">
						<label for="inputEmail">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>

					</div>
					<div class="input-field">

						<label for="inputPassword">Password</label>
						<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					</div>


						<h1 class="h5 mb-3 font-weight-normal">Please sign in</h1>
					<div class="row">



						<button class="btn btn-info col" type="submit">
							Sign in   
						</button>
					
                    <div class="btn btn-info col">
                      <a  href="{{ path('app_register') }}" <button class="btn btn-lg btn-info" type="submit">
							Register
						</button></a>
                    </div>
                    </div>

				</div>
			</div>


		</div>


	</form>
{% endblock %}
